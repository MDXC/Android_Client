<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efefef"
    android:orientation="vertical" >

    <ListView
            android:id="@+id/travelers_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:id="@+id/notravelerlist_view" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_warning" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dip"
                android:gravity="center"
                android:text="@string/no_travelers_info"
                android:textColor="@color/color_black" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_h" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dip"
                android:text="@string/contact_us"
                android:textColor="@color/color_black" />

            <Button
                android:id="@+id/contact_us_btn"
                android:layout_width="300dip"
                android:layout_height="50dip"
                android:background="@drawable/bg_btn_white_c_br"
                android:text="18710161651" 
                android:layout_centerInParent="true"
                android:textColor="@color/color_black" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    
</LinearLayout>