<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:gravity="center_vertical" 
        android:orientation="vertical" 
        android:background="@drawable/selector_btn_4" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        
        <TextView 
            android:textSize="@dimen/font_size_medium" 
            android:textColor="@color/color_333333" 
            android:id="@+id/tv_title" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="@dimen/margin_10" 
            android:singleLine="true" android:text="beijng" android:layout_marginBottom="5dip"/>

        <LinearLayout
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:textSize="@dimen/font_size_small" 
                android:textColor="@color/color_666666" 
                android:id="@+id/tv_subtitle" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="@dimen/margin_10" 
                android:singleLine="true" 
                android:layout_weight="1.0" android:text="BJS" />
            
            <TextView 
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/color_666666" 
                android:id="@+id/tv_distance" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="@dimen/margin_10" 
                android:singleLine="true" 
                android:layout_marginEnd="@dimen/margin_10" />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/layout_airports" android:visibility="visible">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:layout_marginLeft="15dip"
                    android:textSize="10sp"
                    android:textColor="@color/color_333333"
                    android:layout_marginBottom="5dip"
                    android:id="@+id/textView_airport_0" android:visibility="gone"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:layout_marginLeft="15dip"
                    android:textSize="10sp"
                    android:textColor="@color/color_333333"
                    android:layout_marginBottom="5dip"
                    android:id="@+id/textView_airport_1" android:visibility="gone"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:layout_marginLeft="15dip"
                    android:textSize="10sp"
                    android:textColor="@color/color_333333"
                    android:layout_marginBottom="5dip"
                    android:id="@+id/textView_airport_2" android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>